                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </ImageView>
                              <Label fx:id="id_user" text="id_user" visible="false">
                                 <font>
                                    <Font name="Segoe UI Black" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label fx:id="datepost" text="1h" textFill="GREY">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Pane HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets left="11.0" />
               </VBox.margin>
            </HBox>
            <Pane styleClass="round-button" stylesheets="@feed.css" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="txtcom" layoutX="14.0" layoutY="13.0" text="nice owrk buddy">
                     <padding>
                        <Insets bottom="15.0" />
                     </padding>
                  </Label>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
