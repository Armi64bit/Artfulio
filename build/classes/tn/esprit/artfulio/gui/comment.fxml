<HBox alignment="CENTER_LEFT" spacing="13.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.artfulio.gui.CommentController">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <ImageView fx:id="imgprofile" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../../artworkimg/pdp/128031848_3563748170408569_6112004551603132267_n.jpg" />
               </image>
            </ImageView>
         </children>
         <HBox.margin>
            <Insets left="7.0" />
         </HBox.margin>
      </HBox>
      <Pane styleClass="round-button" stylesheets="@feed.css" />
      <VBox styleClass="post-backgroundwithshadow" stylesheets="@feed.css" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" spacing="3.0">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label fx:id="usernamecom" onMouseClicked="#taketoprofile" text="Username">
                                 <font>
                                    <Font name="Segoe UI Black" size="14.0" />
                                 </font>
                              </Label>
                              <ImageView fx:id="imgbadge" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
